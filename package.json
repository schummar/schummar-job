{
  "name": "schummar-job",
  "repository": "schummar/schummar-job",
  "version": "0.3.0",
  "description": "",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "license": "ISC",
  "scripts": {
    "build": "npm-run-all -s build:clean -p build:compile:*",
    "build:clean": "rimraf dist/**",
    "build:compile:esm": "tsc",
    "build:compile:cjs": "tsc -p tsconfig-cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "prepublishOnly": "run-s lint build",
    "test": "cd test && ava -v",
    "coverage": "nyc --include src --all npm run test"
  },
  "keywords": [],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "ava": "^3.15.0",
    "eslint": "^8.14.0",
    "mongodb": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "cron-schedule": "^3.0.5",
    "nanoid": "^3.3.3",
    "schummar-queue": "0.1.0"
  },
  "peerDependencies": {
    "mongodb": ">=3.6.6"
  },
  "files": [
    "dist"
  ]
}
