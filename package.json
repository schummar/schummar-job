{
  "name": "schummar-job",
  "repository": "schummar/schummar-job",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "license": "ISC",
  "scripts": {
    "build": "npm-run-all -s build:clean -p build:compile:*",
    "build:clean": "rimraf dist/**",
    "build:compile:esm": "tsc",
    "build:compile:cjs": "tsc -p tsconfig-cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "prepublishOnly": "run-s lint build",
    "test": "cd test && ava",
    "test-watch": "cd test && ava --watch",
    "coverage": "nyc --include src --all npm run test"
  },
  "keywords": [],
  "devDependencies": {
    "@types/mongodb": "^3.6.12",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "ava": "^3.15.0",
    "eslint": "^7.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "schummar-queue": "0.0.4"
  },
  "peerDependencies": {
    "mongodb": "^3.6.6"
  },
  "files": [
    "dist"
  ]
}
