{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,

    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"]
}
